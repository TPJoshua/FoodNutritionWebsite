@page "/Food/view/{id:int}"
@inject HttpClient _client
@inject NavigationManager _navManager

<h2>View Food</h2>

<FormComponent food="food" Disabled="true" />

@code {
	[Parameter] public int id { get; set; }
	Food? food = new Food();

	protected async override Task OnParametersSetAsync()
	{
		food = await
		_client.GetFromJsonAsync<Food>($"{"api/foods"}/{id}");
	}
}